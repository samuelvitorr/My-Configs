    // =========================
    // ‚òï Java e Maven
    // =========================
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "/home/samuel/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/11"
        },
        {
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-openjdk"
        },
        {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/java-21-openjdk"
        },
        {
            "name": "JavaSE-25",
            "path": "/home/samuel/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/latest",
            "default": true
        }
    ],
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.debug.settings.hotCodeReplace": "auto",
    "java.maxConcurrentBuilds": 8,
    "maven.executable.path": "/home/samuel/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/maven/latest/bin/mvn",
    "maven.terminal.customEnv": [
        { "environmentVariable": "JAVA_HOME", "value": "/usr/lib/jvm/java-21-openjdk" }
    ],

    // =========================
    // üß∞ Outras extens√µes √∫teis
    // =========================
    "cSpell.language": "en,pt",
    "cSpell.diagnosticLevel": "Hint",
    "trailing-spaces.backgroundColor": "rgba(255,0,0,0.1)",
    "trailing-spaces.includeEmptyLines": false,
    "database-client.autoSync": true,
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",
    "markdown-preview-enhanced.revealjsTheme": "moon.css",
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "security.workspace.trust.untrustedFiles": "newWindow",
    "java.import.gradle.home": "/home/samuel/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/gradle/latest",
    "java.import.gradle.java.home": "/home/samuel/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/latest",
    "redhat.telemetry.enabled": true,
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.defaultProfile.linux": "JavaSE-25 LTS",
    "yaml.schemas": {
        "file:///home/samuel/.vscode/extensions/continue.continue-1.2.9-linux-x64/config-yaml-schema.json": [
            ".continue/**/*.yaml"
        ]
    },
    "diffEditor.codeLens": true
}
